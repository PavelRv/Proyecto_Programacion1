#include <iostream>
#include <string>
using namespace std;

bool menu(bool flag){
    int eleccion_menu = 0;
    cout << "Continuar? 1.Si 2.No" << endl;
        cin >> eleccion_menu;
        switch (eleccion_menu) {
            case 1:
                cout << "Reiniciando el tablero..." << endl;
                break;
            case 2:
                cout << "Saliendo...";
                flag = false;
                break;
            default:
                cout << "Opcion no valida, por favor elija 1 o 2." << endl;
        }
        return flag;
}
